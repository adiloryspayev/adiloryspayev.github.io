---
import { SITE_CONFIG } from '../config';

const currentPath = Astro.url.pathname;
const navItems = [
  ...SITE_CONFIG.navigation,
  ...(SITE_CONFIG.showWritingSection ? [{ name: 'Writing', href: '/writing' }] : [])
];
---

<header class="sticky top-0 z-50 bg-gray-950/80 backdrop-blur-md border-b border-gray-900">
  <div class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
    <a href="/" class="flex items-center space-x-2">
      <div class="w-8 h-8 bg-emerald-500 rounded flex items-center justify-center font-bold text-gray-950">AO</div>
      <span class="font-bold text-gray-100 hidden sm:block">Adil Oryspayev</span>
    </a>
    <nav class="flex items-center space-x-1 text-sm">
      {navItems.map(item => (
        <a href={item.href} class="px-3 py-1.5 rounded-md hover:bg-gray-900 hover:text-emerald-400 transition-colors">
          {item.name}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
