---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: string;
  course: string;
  readTime?: string;
}

const { title, date, course, readTime } = Astro.props;
---

<BaseLayout title={`${title} | Adil Oryspayev`}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Back Button -->
    <a 
      href="/writing" 
      class="inline-flex items-center gap-2 text-gray-400 hover:text-su-orange transition-colors mb-8"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Writing
    </a>

    <!-- Header -->
    <header class="mb-12 pb-8 border-b border-gray-800">
      <div class="inline-block px-4 py-2 bg-gray-800 border border-su-orange text-su-orange text-sm font-mono rounded-full mb-4">
        {course}
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-100 mb-4">
        {title}
      </h1>
      <div class="flex flex-wrap items-center gap-4 text-gray-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          {date}
        </div>
        {readTime && (
          <span class="reading-time">{readTime}</span>
        )}
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          Adil Oryspayev
        </div>
      </div>
    </header>

    <!-- Content -->
    <div class="prose prose-lg prose-invert max-w-none">
      <slot />
    </div>

    <!-- Footer -->
    <footer class="mt-16 pt-8 border-t border-gray-800">
      <div class="flex items-center justify-between">
        <a 
          href="/writing" 
          class="text-gray-400 hover:text-su-orange transition-colors"
        >
          ‚Üê Back to All Writing
        </a>
        <div class="flex items-center gap-4">
          <a 
            href={`mailto:aoryspay@syr.edu?subject=Feedback on ${title}`}
            class="text-gray-400 hover:text-su-orange transition-colors text-sm"
          >
            Send Feedback
          </a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .prose {
    @apply text-gray-300;
  }
  
  .prose h2 {
    @apply text-3xl font-bold text-gray-100 mt-12 mb-6;
  }
  
  .prose h3 {
    @apply text-2xl font-bold text-gray-100 mt-8 mb-4;
  }
  
  .prose h4 {
    @apply text-xl font-bold text-gray-200 mt-6 mb-3;
  }
  
  .prose p {
    @apply mb-6 leading-relaxed;
  }
  
  .prose strong {
    @apply text-gray-100 font-semibold;
  }
  
  .prose em {
    @apply text-gray-300 italic;
  }
  
  .prose blockquote {
    @apply border-l-4 border-su-orange pl-6 py-2 my-6 bg-gray-900 rounded-r-lg;
  }
  
  .prose ul, .prose ol {
    @apply my-6 space-y-2;
  }
  
  .prose li {
    @apply ml-6;
  }
  
  .prose a {
    @apply text-su-orange hover:text-su-orange-light underline;
  }
  
  .prose code {
    @apply bg-gray-800 text-su-orange-light px-1.5 py-0.5 rounded font-mono text-sm;
  }
  
  .prose pre {
    @apply bg-gray-900 rounded-lg p-4 overflow-x-auto border border-gray-800;
  }
  
  .prose img {
    @apply rounded-lg my-8 border border-gray-800;
  }
</style>