---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: string;
  course: string;
  readTime?: string;
}

const { title, date, course, readTime } = Astro.props;
---

<BaseLayout title={`${title} | Adil Oryspayev`}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <a href="/writing" class="inline-flex items-center gap-2 text-gray-500 hover:text-emerald-400 transition-colors mb-12 text-sm font-mono">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
      Return to Inquiry
    </a>

    <header class="mb-12 border-b border-gray-900 pb-12">
      <div class="flex items-center gap-3 mb-6">
        <span class="px-3 py-1 bg-emerald-500/5 border border-emerald-500/20 text-emerald-500 text-xs font-mono rounded-full">
          {course}
        </span>
        <span class="text-gray-600 text-xs font-mono">{readTime}</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-100 mb-6 tracking-tight leading-tight">
        {title}
      </h1>
      <div class="flex items-center gap-2 text-gray-500 text-sm">
        <span>{date}</span>
        <span class="text-gray-800">•</span>
        <span>Adil Oryspayev</span>
      </div>
    </header>

    <div class="prose prose-invert prose-lg max-w-none prose-headings:text-gray-100 prose-p:text-gray-400 prose-a:text-emerald-400 hover:prose-a:text-emerald-300 prose-blockquote:border-emerald-500 prose-blockquote:bg-gray-900/30 prose-blockquote:text-gray-300 prose-code:text-emerald-300 prose-pre:bg-gray-900 prose-pre:border prose-pre:border-gray-800">
      <slot />
    </div>

    <footer class="mt-20 pt-12 border-t border-gray-900">
      <a href="/writing" class="text-gray-500 hover:text-emerald-400 transition-colors text-sm font-mono">
        ← Back to Inquiry Portfolio
      </a>
    </footer>
  </article>
</BaseLayout>
