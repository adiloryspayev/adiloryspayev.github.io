---
import BaseLayout from '../layouts/BaseLayout.astro';

const research = [
  {
    title: 'Geometric Measure Theory',
    organization: 'Polymath Jr',
    date: 'Jun 2024 – Present',
    status: 'Under Review',
    venue: 'Rose-Hulman Undergraduate Mathematics Journal',
    description: 'Co-authored research manuscript investigating computational criteria for rectifiability.',
    tags: ['Measure Theory', 'Python', 'LaTeX'],
    abstract: 'We discretize continuous pointwise cone conditions into dyadic square structures.'
  }
];
---

<BaseLayout title="Research | Adil Oryspayev">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <h1 class="text-4xl font-bold mb-12">Research</h1>
    <div class="space-y-12">
      {research.map((paper) => (
        <article class="bg-gray-800/50 p-8 rounded-xl border-l-4 border-su-orange">
          <div class="mb-4">
             <span class="px-3 py-1 bg-blue-900 text-blue-300 text-xs font-bold rounded-full uppercase tracking-wide">
               {paper.status}
             </span>
             <h2 class="text-2xl font-bold text-gray-100 mt-2">{paper.title}</h2>
             <p class="text-gray-400">{paper.organization} • {paper.venue}</p>
          </div>
          <p class="text-gray-300 mb-6">{paper.abstract}</p>
          
          <div class="flex flex-wrap gap-2">
            {/* FIX: Removed key={tag} below */}
            {paper.tags.map((tag) => (
              <span class="px-2 py-1 bg-gray-900 text-xs font-mono rounded text-gray-400">
                {tag}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>
