---
import BaseLayout from '../layouts/BaseLayout.astro';

const writings = [
  {
    title: 'Project 1: Arts Encounter Analysis',
    slug: 'arts-encounter',
    date: 'Spring 2026',
    course: 'WRT 205',
    description: 'A reflective analysis examining artistic expression through the lens of technical and rhetorical frameworks.',
    readTime: '8 min read',
    status: 'In Progress'
  }
];
---

<BaseLayout title="Inquiry | Adil Oryspayev">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="mb-12 animate-fade-in">
      <div class="inline-block px-4 py-2 bg-gray-900 border border-emerald-500/30 text-emerald-400 text-sm font-mono rounded-full mb-4">
        WRT 205 • Spring 2026
      </div>
      <h1 class="text-4xl font-bold text-gray-100 mb-6">Inquiry Portfolio</h1>
      <p class="text-xl text-gray-400 max-w-3xl">
        Reflective essays and analytical writing exploring the intersection of arts, technology, and rhetorical analysis.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {writings.map((writing) => (
        <a 
          href={`/writing/${writing.slug}`}
          class="card group hover:-translate-y-1"
        >
          <div class="flex items-center justify-between mb-4">
            <span class="px-2 py-1 bg-emerald-900/30 border border-emerald-500/30 text-emerald-400 text-xs rounded">
              {writing.status}
            </span>
            <span class="text-sm text-gray-500 font-mono">{writing.readTime}</span>
          </div>

          <h2 class="text-2xl font-bold text-gray-100 mb-2 group-hover:text-emerald-400 transition-colors">
            {writing.title}
          </h2>

          <p class="text-sm text-gray-500 mb-4 font-mono">
            {writing.course} • {writing.date}
          </p>

          <p class="text-gray-400 leading-relaxed mb-6">
            {writing.description}
          </p>

          <div class="flex items-center gap-2 text-emerald-500 font-semibold text-sm">
            Read Analysis
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
