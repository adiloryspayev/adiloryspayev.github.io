---
import BaseLayout from '../layouts/BaseLayout.astro';

const writings = [
  {
    title: 'Project 1: Arts Encounter Analysis',
    slug: 'arts-encounter',
    date: 'Spring 2026',
    course: 'WRT 205',
    description: 'A reflective analysis examining artistic expression through the lens of technical and rhetorical frameworks.',
    readTime: '8 min read',
    status: 'In Progress'
  }
];
---

<BaseLayout title="Writing | Adil Oryspayev">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Header -->
    <div class="mb-12 animate-fade-in">
      <div class="inline-block px-4 py-2 bg-gray-800 border border-su-orange text-su-orange text-sm font-mono rounded-full mb-4">
        WRT 205 • Spring 2026
      </div>
      <h1 class="section-title">Writing Portfolio</h1>
      <p class="text-xl text-gray-300 max-w-3xl">
        Reflective essays and analytical writing exploring the intersection of arts, 
        technology, and rhetorical analysis.
      </p>
    </div>

    <!-- Note about Removal -->
    <div class="bg-yellow-900/20 border border-yellow-700 rounded-lg p-6 mb-12">
      <div class="flex gap-4">
        <svg class="w-6 h-6 text-yellow-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <h3 class="font-bold text-yellow-300 mb-2">Course Requirement Section</h3>
          <p class="text-gray-300 text-sm">
            This section can be easily removed after the course ends by setting 
            <code class="text-su-orange px-2 py-1 bg-gray-900 rounded">showWritingSection: false</code> 
            in <code class="text-su-orange px-2 py-1 bg-gray-900 rounded">src/config.ts</code>
          </p>
        </div>
      </div>
    </div>

    <!-- Writing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {writings.map((writing, index) => (
        <a 
          href={`/writing/${writing.slug}`}
          class="card group hover:scale-[1.02] transition-transform animate-slide-up"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="flex items-center justify-between mb-4">
            <span class={`px-3 py-1 rounded-full text-xs font-semibold ${
              writing.status === 'Published' 
                ? 'bg-green-900 text-green-300 border border-green-700' 
                : 'bg-blue-900 text-blue-300 border border-blue-700'
            }`}>
              {writing.status}
            </span>
            <span class="reading-time">{writing.readTime}</span>
          </div>

          <h2 class="text-2xl font-bold text-gray-100 mb-2 group-hover:text-su-orange transition-colors">
            {writing.title}
          </h2>

          <p class="text-sm text-gray-400 mb-3">
            {writing.course} • {writing.date}
          </p>

          <p class="text-gray-300 leading-relaxed mb-4">
            {writing.description}
          </p>

          <div class="flex items-center gap-2 text-su-orange font-semibold text-sm">
            Read More
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>