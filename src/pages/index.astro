---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_CONFIG, SKILLS } from '../config';
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Background gradient animation -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900"></div>
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-su-orange rounded-full mix-blend-multiply filter blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-su-orange-dark rounded-full mix-blend-multiply filter blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left Column: Text Content -->
        <div class="space-y-6 animate-fade-in">
          <div class="inline-block">
            <span class="px-4 py-2 bg-gray-800 border border-su-orange text-su-orange text-sm font-mono rounded-full">
              Available for Summer 2026 Internships
            </span>
          </div>
          
          <h1 class="text-5xl md:text-7xl font-bold leading-tight">
            <span class="block text-gray-100">Adil Oryspayev</span>
            <span class="block bg-gradient-to-r from-su-orange to-su-orange-light bg-clip-text text-transparent">
              CS & Math
            </span>
          </h1>

          <p class="text-xl text-gray-300 leading-relaxed max-w-2xl">
            Syracuse University student (GPA: 3.96) specializing in <span class="text-su-orange font-semibold">Geometric Measure Theory</span>, 
            high-performance systems, and full-stack engineering. Building elegant solutions at the intersection of mathematics and software.
          </p>

          <div class="flex flex-wrap gap-4 pt-4">
            <a href="/experience" class="btn-primary">
              View Experience
            </a>
            <a href="/research" class="btn-secondary">
              Research Work
            </a>
            <a href={`mailto:${SITE_CONFIG.email}`} class="btn-secondary">
              Get in Touch
            </a>
          </div>

          <!-- Quick Stats -->
          <div class="grid grid-cols-3 gap-4 pt-8">
            <div class="text-center p-4 bg-gray-800 rounded-lg border border-gray-700">
              <div class="text-3xl font-bold text-su-orange">3.96</div>
              <div class="text-sm text-gray-400 mt-1">GPA</div>
            </div>
            <div class="text-center p-4 bg-gray-800 rounded-lg border border-gray-700">
              <div class="text-3xl font-bold text-su-orange">5+</div>
              <div class="text-sm text-gray-400 mt-1">Research Projects</div>
            </div>
            <div class="text-center p-4 bg-gray-800 rounded-lg border border-gray-700">
              <div class="text-3xl font-bold text-su-orange">25k+</div>
              <div class="text-sm text-gray-400 mt-1">Users Managed</div>
            </div>
          </div>
        </div>

        <!-- Right Column: Headshot & Highlights -->
        <div class="space-y-8 animate-slide-up">
          <!-- Professional Headshot -->
          <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-su-orange to-su-orange-light rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
            <div class="relative">
              <img 
                src="/headshot.jpeg" 
                alt="Adil Oryspayev"
                class="rounded-2xl w-full shadow-2xl border-2 border-gray-800"
              />
            </div>
          </div>

          <!-- Key Highlights -->
          <div class="space-y-3">
            <div class="flex items-start gap-3 p-4 bg-gray-800 rounded-lg border border-gray-700 hover:border-su-orange transition-colors">
              <div class="w-8 h-8 bg-su-orange rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-100">Goldman Sachs Possibilities Summit</h3>
                <p class="text-sm text-gray-400">Selected Participant (2025)</p>
              </div>
            </div>

            <div class="flex items-start gap-3 p-4 bg-gray-800 rounded-lg border border-gray-700 hover:border-su-orange transition-colors">
              <div class="w-8 h-8 bg-su-orange rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-100">Published Research</h3>
                <p class="text-sm text-gray-400">Under review at Rose-Hulman Journal</p>
              </div>
            </div>

            <div class="flex items-start gap-3 p-4 bg-gray-800 rounded-lg border border-gray-700 hover:border-su-orange transition-colors">
              <div class="w-8 h-8 bg-su-orange rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-100">Competitive Programming</h3>
                <p class="text-sm text-gray-400">1st Place Quinnipiac | USACO Gold</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Overview Section -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <h2 class="section-title text-center">Technical Arsenal</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
      <!-- Languages -->
      <div class="card">
        <h3 class="text-xl font-bold text-gray-100 mb-6 flex items-center gap-2">
          <svg class="w-6 h-6 text-su-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
          </svg>
          Languages
        </h3>
        <div class="space-y-4">
          {SKILLS.languages.slice(0, 5).map((skill) => (
            <div key={skill.name}>
              <div class="flex justify-between text-sm mb-1">
                <span class="text-gray-300">{skill.name}</span>
                <span class="text-su-orange font-mono">{skill.level}%</span>
              </div>
              <div class="h-2 bg-gray-700 rounded-full overflow-hidden">
                <div 
                  class="h-full bg-gradient-to-r from-su-orange to-su-orange-light skill-bar-fill"
                  style={`width: ${skill.level}%`}
                ></div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Frameworks -->
      <div class="card">
        <h3 class="text-xl font-bold text-gray-100 mb-6 flex items-center gap-2">
          <svg class="w-6 h-6 text-su-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          Frameworks
        </h3>
        <div class="flex flex-wrap gap-2">
          {SKILLS.frameworks.map((framework) => (
            <span key={framework} class="tag">
              {framework}
            </span>
          ))}
        </div>
      </div>

      <!-- Tools -->
      <div class="card">
        <h3 class="text-xl font-bold text-gray-100 mb-6 flex items-center gap-2">
          <svg class="w-6 h-6 text-su-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Tools & Platforms
        </h3>
        <div class="flex flex-wrap gap-2">
          {SKILLS.tools.map((tool) => (
            <span key={tool} class="tag">
              {tool}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="card text-center bg-gradient-to-r from-gray-800 to-gray-900 border-su-orange">
      <h2 class="text-3xl font-bold text-gray-100 mb-4">
        Let's Build Something Amazing
      </h2>
      <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
        I'm actively seeking Summer 2026 internship opportunities in software engineering, 
        quantitative research, or technical roles where I can apply my skills in mathematics 
        and systems design.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href={`mailto:${SITE_CONFIG.email}`} class="btn-primary">
          Contact Me
        </a>
        <a href="/projects" class="btn-secondary">
          View Projects
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
