---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_CONFIG, SKILLS } from '../config';
---

<BaseLayout title={SITE_CONFIG.title}>
  <section class="max-w-7xl mx-auto px-4 py-24 sm:px-6 lg:px-8">
    <div class="max-w-3xl animate-fade-in">
      <div class="inline-flex items-center space-x-2 text-emerald-500 font-mono text-sm mb-6">
        <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
        <span>Available for Summer 2026 Internships</span>
      </div>
      <h1 class="text-6xl md:text-7xl font-extrabold mb-8 tracking-tighter text-gray-100">
        Adil <span class="text-gray-500">Oryspayev</span>
      </h1>
      <p class="text-xl text-gray-400 leading-relaxed mb-10">
        Computer Science and Mathematics student at <span class="text-gray-100">Syracuse University</span> (GPA: 3.96). 
        Specializing in <span class="text-emerald-400">high-performance ingestion pipelines</span> and <span class="text-emerald-400">Geometric Measure Theory</span>.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="/experience" class="px-6 py-3 bg-emerald-600 hover:bg-emerald-500 text-gray-950 font-bold rounded-lg transition-all">
          View Experience
        </a>
        <a href="/research" class="px-6 py-3 bg-gray-900 border border-gray-800 hover:border-emerald-500/50 text-gray-100 font-semibold rounded-lg transition-all">
          Research Work
        </a>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 py-20 border-t border-gray-900">
    <h2 class="section-title">Technical Arsenal</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      
      <div>
        <h3 class="text-sm font-mono text-emerald-500 uppercase tracking-widest mb-6">Languages</h3>
        <div class="flex flex-wrap gap-2">
          {SKILLS.languages.map((skill) => (
            <span class="tag">{skill}</span>
          ))}
        </div>
      </div>

      <div>
        <h3 class="text-sm font-mono text-emerald-500 uppercase tracking-widest mb-6">Frameworks</h3>
        <div class="flex flex-wrap gap-2">
          {SKILLS.frameworks.map((framework) => (
            <span class="tag">{framework}</span>
          ))}
        </div>
      </div>

      <div>
        <h3 class="text-sm font-mono text-emerald-500 uppercase tracking-widest mb-6">Tools</h3>
        <div class="flex flex-wrap gap-2">
          {SKILLS.tools.map((tool) => (
            <span class="tag">{tool}</span>
          ))}
        </div>
      </div>

    </div>
  </section>
</BaseLayout>
