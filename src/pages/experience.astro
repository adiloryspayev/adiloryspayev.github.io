---
import BaseLayout from '../layouts/BaseLayout.astro';

const experiences = [
  {
    title: 'Data Science Fellow',
    organization: 'The Data Mine – Purdue University',
    date: 'Jan 2026 – Present',
    description: 'Selected for the National Data Mine Network to execute large-scale data analysis on Purdue\'s Anvil HPC cluster.',
    tags: ['Python', 'Bash', 'SQL', 'Linux', 'HPC']
  },
  {
    title: 'Software Engineer Intern',
    organization: 'Syracuse University OSPO',
    date: 'Apr 2025 – Present',
    description: 'Engineered a high-frequency ingestion pipeline utilizing Qdrant vector storage.',
    tags: ['Python', 'Docker', 'Qdrant', 'GROBID', 'Linux']
  },
  {
    title: 'IT Manager & Technical Lead',
    organization: 'The Daily Orange',
    date: 'Jan 2025 – Present',
    description: 'Directed engineering operations for a high-traffic news platform serving 25,000+ monthly active users.',
    tags: ['UptimeRobot', 'Cloudflare', 'Backend']
  }
];
---

<BaseLayout title="Experience | Adil Oryspayev">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <h1 class="text-4xl font-bold mb-12">Professional Experience</h1>
    <div class="space-y-8">
      {experiences.map((exp) => (
        <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-2xl font-bold text-gray-100">{exp.title}</h3>
              <p class="text-su-orange font-semibold">{exp.organization}</p>
            </div>
            <span class="text-sm text-gray-400">{exp.date}</span>
          </div>
          <p class="text-gray-300 mb-4">{exp.description}</p>
          <div class="flex flex-wrap gap-2">
            {exp.tags.map(tag => (
              <span class="px-2 py-1 bg-gray-900 text-xs font-mono rounded text-su-orange-light"> {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
