---
import BaseLayout from '../layouts/BaseLayout.astro';

const experience = [
  {
    title: "Software Engineer Intern",
    org: "Syracuse University Open Source Program Office (OSPO)",
    date: "Apr 2025 – Present",
    bullets: [
      "Engineered a high-frequency ingestion pipeline utilizing Qdrant vector storage and transformer models to enable semantic search and summarization across large-scale academic corpora [cite: 101, 156]",
      "Optimized system performance by implementing stream-based PDF parsing with GROBID, reducing memory usage during the tokenization and metadata extraction of heavy datasets [cite: 102, 157]",
      "Deployed production infrastructure on Linux VMs using Docker, configuring automated CI/CD workflows and network security protocols [cite: 103, 158]"
    ]
  },
  {
    title: "IT Manager & Technical Lead",
    org: "The Daily Orange",
    date: "Jan 2025 – Present",
    bullets: [
      "Directed engineering operations for a high-traffic news platform, ensuring site reliability and security against cyberattacks for over 25,000 monthly active users [cite: 117, 170]",
      "Managed production infrastructure (UptimeRobot, Cloudflare) and architected revenue-critical backend modules, handling traffic spikes while increasing ad revenue by 15% [cite: 118, 171]"
    ]
  }
];

const leadership = [
  {
    title: "Data Structures and Algorithms Teaching Assistant",
    org: "Westhill High School",
    date: "Aug 2023 – Jun 2024",
    bullets: [
      "Taught lessons on Huffman coding, linked lists, and stack implementation when the primary instructor was absent ",
      "Designed comprehensive test cases for lab assignments, graded quizzes, and provided technical support for student projects "
    ]
  },
  {
    title: "Competitive Coding Club Captain",
    org: "Westhill High School",
    date: "Aug 2021 – Jun 2024",
    bullets: [
      "Led the 'A' team to 1st place and multiple top-5 finishes at Quinnipiac University coding competitions using Java ",
      "Coordinated team participation in Lockheed Martin's Code Quest, ACSL, and Greenwich Country Day Tigerhacks "
    ]
  }
];
---
<BaseLayout title="Experience | Adil Oryspayev">
  <div class="max-w-4xl mx-auto px-4 py-20">
    <h2 class="section-title">Professional Experience</h2>
    <div class="space-y-16 mb-24">
      {experience.map(exp => (
        <div class="relative pl-8 border-l border-gray-800">
          <div class="absolute -left-1.5 top-1.5 w-3 h-3 bg-emerald-500 rounded-full"></div>
          <div class="flex justify-between items-baseline mb-2">
            <h3 class="text-xl font-bold text-gray-100">{exp.title}</h3>
            <span class="text-sm font-mono text-emerald-500">{exp.date}</span>
          </div>
          <p class="text-gray-400 mb-4">{exp.org}</p>
          <ul class="space-y-3 text-sm text-gray-300 leading-relaxed">
            {exp.bullets.map(bullet => <li class="flex gap-2"><span>•</span>{bullet}</li>)}
          </ul>
        </div>
      ))}
    </div>

    <h2 class="section-title">Leadership & Teaching</h2>
    <div class="space-y-16">
      {leadership.map(lead => (
        <div class="relative pl-8 border-l border-gray-800">
          <div class="absolute -left-1.5 top-1.5 w-3 h-3 bg-gray-700 rounded-full"></div>
          <div class="flex justify-between items-baseline mb-2">
            <h3 class="text-xl font-bold text-gray-100">{lead.title}</h3>
            <span class="text-sm font-mono text-emerald-500">{lead.date}</span>
          </div>
          <p class="text-gray-400 mb-4">{lead.org}</p>
          <ul class="space-y-3 text-sm text-gray-300 leading-relaxed">
            {lead.bullets.map(bullet => <li class="flex gap-2"><span>•</span>{bullet}</li>)}
          </ul>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
